<Window x:Class="Odin.Views.AboutView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AboutView" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="30" />
            <RowDefinition
                Height="30" />
            <RowDefinition
                Height="30" />
            <RowDefinition
                Height="30" />
            <RowDefinition
                Height="30" />
            <RowDefinition
                Height="30" />
            <RowDefinition
                Height="30" />
            <RowDefinition
                Height="30" />

        </Grid.RowDefinitions>
        <Label
            Grid.Row="2"
            Content ="Odin Version"
            Width="100"
            Margin="96,0" />
        <TextBox 
            Width="200"
            Grid.Row="3"
            IsEnabled="False"
            Text="{Binding Version}"/>

    </Grid>
</Window>
