                        Grid.Row="6"
                        HorizontalAlignment="Left" 
                        ToolTip="{Binding EcommerceMsrpToolTip}"
                        VerticalAlignment="Center"
                        Width="124" />
                    <TextBox
                        HorizontalAlignment="Left"
                        Grid.Column="5"
                        Grid.Row="6"
                        Margin="6,6,0,6"
                        Text="{Binding EcommerceMsrp}"
                        TextWrapping="Wrap"
                        VerticalContentAlignment="Center"
                        Width="170" />
                    <!-- Size -->
                    <Label
                        Background="{Binding EcommerceSizeBoxColor}"
                        Content="Size"
                        Grid.Column="4"
                        Grid.Row="7"
                        HorizontalAlignment="Left" 
                        ToolTip="{Binding EcommerceSizeToolTip}"
                        VerticalAlignment="Center"
                        Width="124" />
                    <TextBox
                        HorizontalAlignment="Left"
                        Grid.Column="5"
                        Grid.Row="7"
                        Margin="6,6,0,6"
                        Text="{Binding EcommerceSize}"
                        TextWrapping="Wrap"
                        VerticalContentAlignment="Center"
                        Width="170" />
                    <!-- Warranty -->
                    <Label
                        Background="{Binding WarrantyBoxColor}"
                        Content="Warranty"
                        Grid.Column="4"
                        Grid.Row="8"
                        HorizontalAlignment="Left" 
                        ToolTip="{Binding WarrantyToolTip}" 
                        Width="124"/>
                    <TextBox
                        HorizontalAlignment="Left"
                        Grid.Column="5"
                        Grid.Row="8"
                        Grid.RowSpan="4"
                        Margin="6,10,0,10"                        
                        Text="{Binding Warranty}"
                        TextWrapping="Wrap"
                        VerticalContentAlignment="Center"
                        Width="170" />

                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel
            FlowDirection="RightToLeft"
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                Height="25"
                Margin="10"
                Width="80"
                Content="Exit"
                Click="CancelButton_Click" />
            <Button
                Height="25"
                Margin="10"
                Width="80"
                Content="Save"
                Command="{Binding SaveCommand}" />
            <Button
                Height="25"
                Margin="10"
                Width="80"
                Content="Remove"
                Click="RemoveButton_Click" />
        </StackPanel>
    </Grid>
</Window>
