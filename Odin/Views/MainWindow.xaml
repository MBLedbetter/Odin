<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ribbon="clr-namespace:DevComponents.WpfRibbon;assembly=DevComponents.WpfRibbon"
    xmlns:Controls="clr-namespace:DevComponents.WPF.Controls;assembly=DevComponents.WPF.Controls"
    x:Class="Odin.Views.MainWindow"
    Title="{Binding WindowTitle}"
    Height="630"
    Width="966"
    Background="Black"
    Loaded="Window_Loaded">
    <Grid
        Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="139*" />
            <ColumnDefinition Width="236*"/>
            <ColumnDefinition Width="104*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="20" />
            <RowDefinition
                Height="150" />
            <RowDefinition
                Height="100*" />
            <RowDefinition
                Height="5" />
            <RowDefinition
                Height="100*"/>
            <RowDefinition
                Height="40" />
            <RowDefinition
                Height="30" />
        </Grid.RowDefinitions>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Grid.Row="0" Margin="0,0,-678,0">
                <MenuItem Header="_File">
                    <MenuItem 
                        Header="Clear Table" 
                        Command="{Binding FormRefreshCommand}"
                        ToolTip="Remove all loaded products from table."/>
                    <MenuItem Header="Update Report" 
                        Command="{Binding ItemUpdateReportCommand}"
                        ToolTip="Pull date range report of updated items."/>
                    <MenuItem Header="Item Records" 
                        Command="{Binding ItemRecordsCommand}"
                        ToolTip="View last user to update items." />
                    <MenuItem Header="Notification History"
                        Command="{Binding UpdateHistoryCommand}"
                        ToolTip="View Odin update notification history." />
                    <MenuItem Header="Options"
                        Command="{Binding OptionsCommand}"
                        ToolTip="User Options."  />
                    <MenuItem Header="Change DB Settings"
                        Command="{Binding DBSettingsCommand}"
                        ToolTip="Switch between development and production databases."  />
                </MenuItem>
                <MenuItem Header="Items">
                    <MenuItem 
                        Header="_Load New" 
                        Command="{Binding LoadItemsCommand}"
                        ToolTip="Upload a list of new products into Odin."/>
                    <MenuItem 
                        Header="_Search"
                        Command="{Binding FindItemCommand}"
                        ToolTip="Find and pull down existing items into Odin." />
                    <MenuItem 
                        Header="_Remove Items"
                            Command="{Binding DeleteItemCommand}"
                            ToolTip="Upload a list of items to be removed from the website." />
                    <MenuItem 
                        Header="_Update Existing"
                        Command="{Binding UpdateProductsCommand}"
                        ToolTip="Update existing products by uploading an excel spreadsheet." />
                    <MenuItem 
                        Header="_Validate Spreadsheet"
                        Command="{Binding ValidateSpreadsheetCommand}"
                        ToolTip="Validate a spreadsheet without loading the items into Odin" />
                    <MenuItem 
                        Header="_Export Items"
                        Click="CreateFullExcel_Click" 
                        ToolTip="Export current items to an excel sheet."/>
                </MenuItem>
                <MenuItem Header="Templates">
                    <MenuItem 
                        Header="_New"
                        Command="{Binding NewTemplateCommand}"
                        ToolTip="Create a New Default Template"/>
                    <MenuItem 
                        Header="_Load New" 
                        Command="{Binding LoadTemplateCommand}"
                        ToolTip="Create a New Default Template"/>
                    <MenuItem 
                        Header="_Edit Existing"
                        Command="{Binding UpdateTemplateCommand}"
                        ToolTip="Update an Existing Template" />
                    <MenuItem 
                        Header="_Export Blank" 
                        Command="{Binding CreateFullTemplateCommand}"
                        ToolTip="Create an empty template excel sheet."/>
                    <MenuItem 
                        Header="_View Existing"
                        Command="{Binding TemplateAllCommand}"
                        ToolTip="Opens a window displaying all existing templates" />
                </MenuItem>
                <MenuItem Header="Submissions">
                    <MenuItem 
                        Header="View Submissions" 
                        Command="{Binding ViewSubmissionsCommand}"
                        ToolTip="Review your past web submissions."/>
                </MenuItem>
                <MenuItem 
                    Header="Admin Control"
                    Visibility="{Binding PermissionAdminVisibility}">
                    <MenuItem 
                        Header="_View Submissions"
                        Command="{Binding ViewSubmissionsAdminCommand}"
                        ToolTip="Use to view submissions." />
                    <MenuItem 
                        Header="Fields" 
                        Command="{Binding ManageFieldCommand}"
                        ToolTip="Manage Field Options."/>
                    <MenuItem 
                        Header="Permissions" 
                        Command="{Binding ManagePermisionCommand}"
                        ToolTip="Manage user permisions."/>
                    <MenuItem 
                        Header="Update Records" 
                        Command="{Binding FindItemUpdateRecordCommand}"
                        ToolTip="Find a list of updates made to an item"/>
                </MenuItem>
                <MenuItem 
                    Header="Ecommerce Manager"
                    Visibility="{Binding PermissionEcommerceControlVisibility}">
                    <MenuItem 
                        Header="Export Items Excel" 
                        Command="{Binding CreateEcommerceExcelCommand}"
                        ToolTip="Create Ecommerce excel sheet with current items."/>
                    <MenuItem Header="Pull Date Range" />
                    <MenuItem Header="Excel Generator" />
                    <MenuItem Header="Submit Images" />
                </MenuItem>
            </Menu>
            <TextBox AcceptsReturn="True" />
        </DockPanel>

        <ribbon:Ribbon
            LicenseKey="DAD80300DA22"
            x:Name="ribbon"
            SystemButtons="False" 
            Grid.ColumnSpan="3" 
            Grid.Row="1" 
            Grid.RowSpan="2" SelectionChanged="Ribbon_SelectionChanged"
            >
            <ribbon:Ribbon.ApplicationMenu>
                <ribbon:ApplicationMenu
                    Header="File"
                    x:Name="FileMenu"
                    Color="Orange">
                    <ribbon:ApplicationMenu.Background>
                        <LinearGradientBrush
                            EndPoint="0.5,1"
                            StartPoint="0.5,0">
                            <GradientStop
                                Color="Black"
                                Offset="0" />
                            <GradientStop
                                Color="White"
                                Offset="1" />
                        </LinearGradientBrush>
                    </ribbon:ApplicationMenu.Background>

                    <ribbon:ApplicationMenu.Image>
                        <Image
                            Source="/odin;component/Resources/Images/Odin2.png" />
                    </ribbon:ApplicationMenu.Image>
                    <!-- "Clear Table" button -->
                    <ribbon:ButtonDropDown
                        Command="{Binding FormRefreshCommand}"
                        Header="Clear Table"
                        ToolTip="Remove all loaded products from table.">
                    </ribbon:ButtonDropDown>
                    <!-- "Change Database" button -->
                    <ribbon:ButtonDropDown
                        Command="{Binding DBSettingsCommand}"
                        Header="Change Database Settings"
                        ToolTip="Change the database login in information">
                    </ribbon:ButtonDropDown>
                    <!-- "Item Records" button -->
                    <ribbon:ButtonDropDown
                        Command="{Binding ItemUpdateReportCommand}"
                        Header="Item Update Report"
                        ToolTip="Pull Update Report">
                    </ribbon:ButtonDropDown>
                    <!-- "Item Records" button -->
                    <ribbon:ButtonDropDown
                        Command="{Binding ItemRecordsCommand}"
                        Header="Item Records"
                        ToolTip="View item Records">
                    </ribbon:ButtonDropDown>
                    <!-- "Notification View" button -->
                    <ribbon:ButtonDropDown
                        Command="{Binding UpdateHistoryCommand}"
                        Header="Notification History"
                        ToolTip="View All Odin Updates">
                    </ribbon:ButtonDropDown>
                    <!-- "Options" button -->
                    <ribbon:ButtonDropDown
                        Command="{Binding OptionsCommand}"
                        Header="Options"
                        ToolTip="Set Odin Options">
                    </ribbon:ButtonDropDown>
                    <!-- "About" button
                    <ribbon:ButtonDropDown
                        Command="{Binding AboutCommand}"
                        Header="About"
                        ToolTip="Get information about this installment">
                    </ribbon:ButtonDropDown -->
                    <!-- "Help" button -->
                    <ribbon:ButtonDropDown
                        Command="{Binding HelpCommand}"
                        Header="Help"
                        ToolTip="View Odin documentation">
                    </ribbon:ButtonDropDown>

                </ribbon:ApplicationMenu>

            </ribbon:Ribbon.ApplicationMenu>

            <!-- "Home" tab -->
            <ribbon:RibbonTab
                Header="Items"
                ToolTip='Options for adding new items to Peoplesoft'>
                <ribbon:RibbonBarPanel
                    Height="90">
                    <ribbon:RibbonBar
                        Header="New Items"
                        HorizontalContentAlignment="Stretch">
                        <!-- Load Items Button-->
                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding LoadItemsCommand}"
                            Header="Load Item Setup Spreadsheet"
                            ToolTip="Upload a product list"
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Add.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>
                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding ValidateSpreadsheetCommand}"
                            Header="Validate Spreadsheet"
                            ToolTip="Validate A Selected Spreadsheet"
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Check.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>

                    </ribbon:RibbonBar>
                    <ribbon:RibbonBar
                        Header="Existing Items"
                        HorizontalContentAlignment="Stretch">

                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding FindItemCommand}"
                            Header="Find Products"
                            ToolTip="Get products that already exist in peoplesoft by providing a list of item Ids."
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Search.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>
                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding UpdateProductsCommand}"
                            Header="Update Products"
                            ToolTip="Add website info or update products already in peoplesoft by uploading an excel spreadsheet."
                            Width="120">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Update.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>
                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding DeleteItemCommand}"
                            Header="Remove Products"
                            ToolTip="Upload a list of items to be removed from the website."
                            Width="120">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Remove.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>
                    </ribbon:RibbonBar>
                    <ribbon:RibbonBar
                        Header=""
                        HorizontalContentAlignment="Stretch">

                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Click="CreateFullExcel_Click" 
                            Header="Create Full Excel Sheet"
                            ToolTip="Get products that already exist in peoplesoft by providing a list of item Ids."
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Download.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>
                    </ribbon:RibbonBar>

                </ribbon:RibbonBarPanel>

            </ribbon:RibbonTab>
            <ribbon:RibbonTab
                Header="Templates"
                Visibility="{Binding PermissionSaveItemVisibility}"
                ToolTip="Options for updating existing information in Peoplesoft">
                <ribbon:RibbonBarPanel
                    Height="90">
                    <ribbon:RibbonBar
                        Header="New Templates"
                        HorizontalContentAlignment="Stretch">
                        <!-- Create Template Button-->
                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding NewTemplateCommand}"
                            Header="Create New Template"
                            ToolTip="Create a New Default Template"
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/New.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>
                        <!-- Load Template Button-->
                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding LoadTemplateCommand}"
                            Header="Load Template"
                            ToolTip="Create a New Default Template"
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Load.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>
                    </ribbon:RibbonBar>
                    <ribbon:RibbonBar
                        Header="Existing Templates"
                        HorizontalContentAlignment="Stretch">
                        <!-- Edit Template Button-->
                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding UpdateTemplateCommand}"
                            Header="Edit Existing Template"
                            ToolTip="Update an Existing Template"
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Edit.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>
                        <!-- Edit Template Button-->
                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding UploadTemplateCommand}"
                            Header="Load Template Updates"
                            ToolTip="Update an Existing Template"
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Load.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>
                    </ribbon:RibbonBar>
                    <ribbon:RibbonBar
                        Header="Template etc"
                        HorizontalContentAlignment="Stretch">
                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding CreateFullTemplateCommand}"
                            Header="Create Blank Template Excel"
                            ToolTip="Create an empty template excel sheet."
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Download.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>
                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding TemplateAllCommand}"
                            Header="View Existing Templates"
                            ToolTip="Opens a window displaying all existing templates"
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Search.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>
                    </ribbon:RibbonBar>

                </ribbon:RibbonBarPanel>

            </ribbon:RibbonTab>
            <ribbon:RibbonTab
                Header=" My Submissions"
                ToolTip="Options for website removal requests.">
                <ribbon:RibbonBarPanel
                    Height="90">
                    <ribbon:RibbonBar
                        Header="Actions"
                        HorizontalContentAlignment="Stretch">

                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding ViewSubmissionsCommand}"
                            Header="Review My Submissions"
                            ToolTip="Review your past web submissions."
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Review.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>

                    </ribbon:RibbonBar>

                </ribbon:RibbonBarPanel>

            </ribbon:RibbonTab>
            <ribbon:RibbonTab
                Header="Admin Control"
                ToolTip="Admin Controls"
                Visibility="{Binding PermissionAdminVisibility}"
                >
                <ribbon:RibbonBarPanel
                    Height="90">
                    <ribbon:RibbonBar
                        Header="Actions"
                        HorizontalContentAlignment="Stretch">

                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding ViewSubmissionsAdminCommand}"
                            Header="View Submissions"
                            ToolTip="Use to view submissions."
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Search.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>
                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding ManageFieldCommand}"
                            Header="Manage Fields"
                            ToolTip="Manage Field Options."
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Edit.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>
                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding ManagePermisionCommand}"
                            Header="Manage Permisions"
                            ToolTip="Manage user permisions."
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Search.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>

                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding FindItemUpdateRecordCommand}"
                            Header="Find Update Records"
                            ToolTip="Find a list of updates made to an item"
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Search.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>

                    </ribbon:RibbonBar>

                </ribbon:RibbonBarPanel>

            </ribbon:RibbonTab>
            <ribbon:RibbonTab
                Header=" Ecommerce Manager "
                ToolTip="Ecommerce Management Tools"
                Visibility="{Binding PermissionEcommerceControlVisibility}"
                >
                <ribbon:RibbonBarPanel
                    Height="90">
                    <ribbon:RibbonBar
                        Header="Search"
                        HorizontalContentAlignment="Stretch">
                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding FindItemCommand}"
                            Header="Find Products"
                            ToolTip="Get products that already exist in peoplesoft by providing a list of item Ids."
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Search.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>
                    </ribbon:RibbonBar>
                    <ribbon:RibbonBar
                        Header="Create"
                        HorizontalContentAlignment="Stretch">
                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding CreateEcommerceExcelCommand}"
                            Header="Create Ecommerce Excel From Items"
                            ToolTip="Create Ecommerce excel sheet with current items."
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/New.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>

                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding PullEcommerceCommand}"
                            Header="Pull Ecommerce Items Date Range"
                            ToolTip="Pull down all active amazon items."
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Download.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>
                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding OpenExcelGeneratorCommand}"
                            Header="Excel Layout Generator"
                            ToolTip="Create or modify excel layouts."
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Add.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>
                    </ribbon:RibbonBar>
                    <ribbon:RibbonBar
                        Header="Addition Images"
                        HorizontalContentAlignment="Stretch">
                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding RequestEcommerceImagesCommand}"
                            Header="Submit Additional Images"
                            ToolTip="Submit additional item images."
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Load.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>
                        <ribbon:ButtonDropDown
                            ImagePosition="Top"
                            Command="{Binding RequestEcommerceImageListCommand}"
                            Visibility="Hidden"
                            Header="View Existing Images"
                            ToolTip="View a list of the existing images on the web server."
                            Width="100">
                            <ribbon:ButtonDropDown.Image>
                                <Image
                                    Source="/odin;component/Resources/Images/Search.png"
                                    Height="32"
                                    Width="32" />
                            </ribbon:ButtonDropDown.Image>
                        </ribbon:ButtonDropDown>
                    </ribbon:RibbonBar>
                </ribbon:RibbonBarPanel>
            </ribbon:RibbonTab>
        </ribbon:Ribbon>
        <!-- Item List View -->
        <ListView
            SelectedItem="{Binding SelectedItem}"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding Items}"
            Background="White"
            Grid.ColumnSpan="3" 
            Margin="0,145,0,5" 
            Grid.RowSpan="3">
            <ListView.ItemContainerStyle>
                <Style
                    TargetType="{x:Type ListViewItem}">
                    <Setter
                        Property="Background"
                        Value="{Binding RowColor}" />
                    <EventSetter
                        Event="Control.MouseDoubleClick"
                        Handler="ItemListView_MouseDoubleClick" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView 
                    AllowsColumnReorder="True">
                    <GridViewColumn                        
                        DisplayMemberBinding="{Binding ItemRow}"
                        Width="auto">
                        <GridViewColumnHeader
                            Content="Line #"
                            HorizontalContentAlignment="Left"
                            Height="30"
                            Padding="5" />
                    </GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Status}"
                        Width="auto">
                        <GridViewColumnHeader
                            Content="Status"
                            HorizontalContentAlignment="Left"
                            Height="30"
                            Padding="5" />
                    </GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding ItemId}"
                        Width="auto">
                        <GridViewColumnHeader
                            Command="{Binding SortCommand}"
                            CommandParameter="ItemId"
                            Content="Item Id"
                            HorizontalContentAlignment="Left"
                            Height="30"
                            Padding="5" />
                    </GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Description}"
                        Width="{Binding DescriptionVisibility}">
                        <GridViewColumnHeader
                            Content="Description"
                            HorizontalContentAlignment="Left"
                            Padding="10,0,0,0" />
                    </GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding AccountingGroup}"
                        Width="{Binding AccountingGroupVisibility}">
                        <GridViewColumnHeader
                            Content="Accounting Group (Product)"
                            Height="30"
                            HorizontalContentAlignment="Left"
                            Padding="5" />
                    </GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding BillOfMaterialsString}"
                        Width="{Binding BillOfMaterialsVisibility}">
                        <GridViewColumnHeader
                            Content="Bill Of Materials"
                            HorizontalContentAlignment="Left"
                            Padding="5" />
                    </GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding CasepackHeight}"
                        Width="{Binding CasepackHeightVisibility}">
                        <GridViewColumnHeader
                            Content="Casepack Height"
                            HorizontalContentAlignment="Left"
                            Padding="5" />
                    </GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding CasepackLength}"
                        Width="{Binding CasepackLengthVisibility}">
                        <GridViewColumnHeader
                            Content="Casepack Length"
                            HorizontalContentAlignment="Left"
                            Padding="5" />
                    </GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding CasepackQty}"
                        Width="{Binding CasepackQtyVisibility}">
                        <GridViewColumnHeader
                            Content="Casepack Quantity"
                            HorizontalContentAlignment="Left"
                            Padding="5" />
                    </GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding CasepackWeight}"
                        Width="{Binding CasepackWeightVisibility}">
                        <GridViewColumnHeader
                            Content="Casepack Weight"
                            HorizontalContentAlignment="Left"
                            Padding="5" />
                    </GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding CasepackWidth}"
                        Width="{Binding CasepackWidthVisibility}">
                        <GridViewColumnHeader
                            Content="Casepack Width"
                            HorizontalContentAlignment="Left"
                            Padding="5" />
                    </GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Category}"
                        Width="{Binding CategoryVisibility}">
                        <GridViewColumnHeader
                            Content="Category"
                            HorizontalContentAlignment="Left"
                            Padding="5" />
                    </GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Category2}"
                        Width="{Binding Category2Visibility}">
                        <GridViewColumnHeader
                            Content="Category 2"
                            HorizontalContentAlignment="Left"
                            Padding="5" />
                    </GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Category3}"
                        Width="{Binding Category3Visibility}">
                        <GridViewColumnHeader
                            Content="Category 3"
                            HorizontalContentAlignment="Left"
                            Padding="5" />
                    </GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Color}"
                        Width="{Binding ColorVisibility}">
                        <GridViewColumnHeader
                            Content="Label Color"
                            HorizontalContentAlignment="Left"
                            Padding="5" />
                    </GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding Copyright}"
                        Width="{Binding CopyrightVisibility}">
                        <GridViewColumnHeader
                            Content="Copyright"
                            HorizontalContentAlignment="Left"
                            Padding="5" />
                    </GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding CostProfileGroup}"
                        Width="{Binding CostProfileGroupVisibility}">
                        <GridViewColumnHeader
                            Content="Cost Profile Group"
                            HorizontalContentAlignment="Left"
                            Padding="5" />
                    </GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding CountryOfOrigin}"
                        Width="{Binding CountryOfOriginVisibility}">
                        <GridViewColumnHeader
                            Content="Country of Origin"
                            HorizontalContentAlignment="Left"
                            Padding="5" />
                    </GridViewColumn>
                    <GridViewColumn
                        DisplayMemberBinding="{Binding DefaultActualCostCad}"
                        Width="{Binding DefaultActualCostCadVisibility}">
                        <GridViewColumnHeader
                            Content="Default Actual Cost CAD"
                            HorizontalContentAlignment="Left"
                            Padding="5" />
