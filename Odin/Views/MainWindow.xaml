            Grid.Row="5"
            Margin="0,5,5,0"
            Height="30"
            Visibility="{Binding PermissionSaveItemVisibility}"
            VerticalAlignment="Top"
            Width="140"
            Click="SaveButton_Click" 
            Grid.Column="2"/>
        <Button
            IsEnabled="{Binding SubmitStatus}"
            Visibility="{Binding PermissionSubmitItemVisibility}"
            Content="Submit Website Request"
            HorizontalAlignment="Right"
            Height="30"
            Grid.Row="5"
            Margin="0,5,150,0"
            VerticalAlignment="Top"
            Width="141"
            Click="SubmitButton_Click"
            Grid.ColumnSpan="2" Grid.Column="1"/>
        <TextBlock            
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Grid.Row="6"
            Margin="5"
            Text="{Binding ProgressText}"  
            TextAlignment="Center"
            />
    </Grid>

</Window>
