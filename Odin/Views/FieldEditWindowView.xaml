<Window
    x:Class="Odin.Views.FieldEditWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:app="clr-namespace:Odin"
    Title="{Binding ViewTitle}"
    Height="300"
    Width="400">
    <Grid>
        <Button
            Content="Cancel"
            HorizontalAlignment="Left"
            Margin="304,200,0,0"
            VerticalAlignment="Top"
            Width="78"
            Height="26"
            Click="CancelButton_Click" />
        <Button
            Content="Submit"
            HorizontalAlignment="Left"
            Margin="221,200,0,0"
            VerticalAlignment="Top"
            Width="78"
            Height="26"
            Click="SubmitButton_Click" />
        <TextBox
            HorizontalAlignment="Left"
            Height="22"
            Margin="10,110,0,0"
            TextWrapping="Wrap"
            Text="{Binding NewFieldValue}"
            VerticalAlignment="Top"
            Width="361" />
        <Label
            Content="{Binding TextboxLabel}"
            HorizontalAlignment="Left"
            Margin="10,70,0,0"
            VerticalAlignment="Top" Width="361" Height="26" />


    </Grid>
</Window>
